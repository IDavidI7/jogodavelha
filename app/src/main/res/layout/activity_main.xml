<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="36sp">
            </TextView>
            <TextView
                android:textColor="@color/red"
                android:layout_marginStart="136dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="36sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:gravity="center"
            android:id="@+id/jogador_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Jogador 1">
        </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="x"
                android:textSize="36sp">
            </TextView>
        <EditText
            android:gravity="center"
            android:id="@+id/jogador_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Jogador 2">
        </EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/a"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/b"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/a"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/c"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/b"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/d"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/a"
                android:layout_margin="5dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/e"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/b"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/d"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/f"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/c"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/e"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/g"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/d"
                android:layout_margin="5dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/h"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/e"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/g"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/i"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/f"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/h"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
        <TextView
            android:layout_margin="16dp"
            android:id="@+id/Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp"/>
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reiniciar"/>

    </LinearLayout>
</layout>